---
import type { ModulesModulesContentHubspotFormLayout } from '@/__generated__/cms';
import ModuleContainer from '@/components/ModuleContainer.astro';
import Form from '@/components/hubspot-form/Form.astro';
import FormContainer from '@/components/hubspot-form/FormContainer.astro';
import type { WithModuleMeta } from '@/types';

type Props = WithModuleMeta<ModulesModulesContentHubspotFormLayout>;

const { __meta__, layoutName, backgroundColor, hubspotFormGuid } = Astro.props;
---

{
  !!hubspotFormGuid && (
    <ModuleContainer meta={__meta__} name={layoutName!} bg={backgroundColor}>
      <FormContainer>
        <Form formGuid={hubspotFormGuid} />
      </FormContainer>
    </ModuleContainer>
  )
}
