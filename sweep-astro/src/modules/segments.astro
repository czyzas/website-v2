---
import type { ModulesModulesContentSegmentsLayout } from '@/__generated__/cms';
import ColoredImageCards from '@/components/ColoredImageCards.astro';
import ModuleContainer from '@/components/ModuleContainer.astro';
import Container from '@/components/ui/Container.astro';

type Props = ModulesModulesContentSegmentsLayout;

const { layoutName, backgroundColor, segmentsCards: cards } = Astro.props;
const filteredCards = (cards ?? []).filter(Boolean);
---

<ModuleContainer name={layoutName!} bg={backgroundColor}>
  <Container>
    <ColoredImageCards cards={filteredCards} />
  </Container>
</ModuleContainer>
