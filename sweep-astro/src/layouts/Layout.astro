---
import '@/styles/global.css';
import '@/assets/fonts/font.css';
import type { HTMLAttributes } from 'astro/types';
import Footer from '@/components/partials/Footer.astro';
import Header from '@/components/partials/Header.astro';
import { cn } from '@/scripts/cn';
import NewsletterSection from '@/components/partials/NewsletterSection.astro';
import { initializeStore } from '@/scripts/store';
import { cacheStore } from '@/stores/cacheStore';

interface Props extends HTMLAttributes<'main'> {
  home?: boolean;
  name: string;
  pageTitle: string;
  htmlClassName?: string;
}
const {
  home,
  name,
  pageTitle,
  class: className,
  htmlClassName,
  ...props
} = Astro.props;

// TODO: Update SEO
const siteTitle = 'Sweep';
const description = 'Sweep description';

const title = !home && pageTitle ? `${pageTitle} - ${siteTitle}` : siteTitle;

// Initialize stores
initializeStore(cacheStore, {
  allIndustries: [],
});
---

<!doctype html>
<html lang="en" class={cn(htmlClassName)}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="google-site-verification"
      content="jwWf1NH5ok9uHdUETiQDA8kUpVYJj9SFAlOsZIGOPos"
    />

    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.PROD ? '/favicon.svg' : '/favicon-dev.svg'}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col antialiased">
    <Header />
    <main {...props} class={cn({ subpage: !home }, name, 'flex-1', className)}>
      <slot />
      <NewsletterSection />
    </main>
    <Footer />
  </body>
</html>
