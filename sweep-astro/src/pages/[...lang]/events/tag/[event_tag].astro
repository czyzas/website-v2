---
import { defaultLocale } from '@/i18n/config';
import {
  fetchEventTagsStaticPaths,
  fetchEventsListPage,
} from '@/lib/fetchCMSData';
import { createPagesStaticPaths } from '@/scripts/utils-static-paths';
import ArticlesList from '@/templates/ArticlesList.astro';

export const getStaticPaths = async () => {
  const paths = await fetchEventTagsStaticPaths();

  return createPagesStaticPaths(paths, {
    paramKey: 'event_tag',
    paramValueType: 'slug',
  });
};

const { lang = defaultLocale, event_tag: tag } = Astro.params;
const data = await fetchEventsListPage(lang, { tag });
---

<ArticlesList
  postType="event"
  prefix="events"
  data={data}
  lang={lang}
  tag={tag}
/>
