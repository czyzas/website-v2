---
import { cmsStore } from '@/stores/cmsStore';
import { getStore } from '@/scripts/store';
import Container from '../ui/Container.astro';
import DemoComponent from '../Demo.astro';

const store = getStore(cmsStore);
const data = store.homepage!;
const acf = data.homepage!.demo!;

const { title, image, button } = acf;
---

<section class="demo py-12 md:py-20 bg-sw-surface-subdued">
  <Container>
    <DemoComponent title={title} image={image} button={button} />
  </Container>
</section>
