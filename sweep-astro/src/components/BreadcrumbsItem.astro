---
type Props = {
  url?: string;
  last?: boolean;
  label?: string;
};

const { last = false, url, label } = Astro.props;
---

{
  !last ? (
    <a
      href={url}
      aria-label={label}
      class="breadcrumbs-item hover:text-sw-sky-400"
    >
      <slot />
    </a>
  ) : (
    <span class="breadcrumbs-item cursor-default font-bold tracking-[1px]">
      <slot />
    </span>
  )
}
