---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/scripts/cn';

type Props = {
  /** @default true */
  withMargin?: boolean;
  marginSize?: 'md' | 'sm';
} & HTMLAttributes<'div'>;

const {
  withMargin = true,
  marginSize = 'md',
  class: className,
  ...props
} = Astro.props;
---

<div
  {...props}
  class={cn(
    'button-container',
    'flex items-center justify-start gap-2 md:justify-center',
    { 'mt-8 md:mt-12': withMargin && marginSize === 'sm' },
    { 'mt-8 md:mt-15': withMargin && marginSize === 'md' },
    className
  )}
>
  <slot />
</div>
