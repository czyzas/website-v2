---
import type { HTMLAttributes } from 'astro/types';
import PrimitiveTabList from '@/components/primitives/Tabs/TabList.astro';
import { cn } from '@/scripts/cn';
import type { WithAttributes } from '@/types';

type Props = WithAttributes<HTMLAttributes<'ul'>>;

const { class: className, ...props } = Astro.props;
---

<PrimitiveTabList
  {...props}
  class={cn('custom-scrollbar flex gap-2 overflow-auto', className)}
>
  <slot />
</PrimitiveTabList>
