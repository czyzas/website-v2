---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/scripts/cn';

type Props = {
  id: string;
  isActive?: boolean;
  liClassName?: string;
} & HTMLAttributes<'button'>;

const {
  id,
  class: className,
  liClassName = '',
  isActive = false,
} = Astro.props;
---

<li role="presentation" class={liClassName}>
  <button
    type="button"
    class={cn('tab-list-item', { active: isActive }, className)}
    id={`tab-list-item-${id}`}
    role="tab"
    data-bs-toggle="tab"
    data-bs-target={`#${id}`}
    aria-controls={id}
    aria-selected={isActive ? 'true' : 'false'}
  >
    <slot />
  </button>
</li>
