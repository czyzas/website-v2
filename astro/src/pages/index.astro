---
import { getModules } from '@/lib/fetchCMSData';
import IncludeModules from '@/modules/modules-includer.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const data = await getModules();
const modulesProps = data?.pages?.nodes[0]?.modules?.modulesFields ?? {};
---

<Layout title="Welcome to Astro.">
  <main>
    <IncludeModules {modulesProps} />
    <h1>Welcome to <span class="text-gradient">Astro</span></h1>
    <Card
      href="https://astro.build/chat/"
      title="Community"
      body="Come say hi to our amazing Discord community. ❤️"
    />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translateX(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  h1 {
    font-size: 4rem;
    font-weight: bold;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgb(var(--accent-light) 25%);
    background: linear-gradient(
      rgb(var(--accent-dark) 66%),
      rgb(var(--accent-dark) 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgb(var(--accent-light) 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
